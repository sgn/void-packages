 -DECM_MKSPECS_INSTALL_DIR=/usr/lib/qt6/mkspecs/modules"
hostmakedepends="extra-cmake-modules gettext kcoreaddons qt5-host-tools qt5-qmake"
makedepends="kparts-devel"
