# Template file for 'kpimtextedit5'
pkgname=kpimtextedit5
version=23.08.5
revision=1
build_style=cmake
configure_args="-DBUILD_TESTING=OFF -DKF6_HOST_TOOLING=/usr/lib/cmake
 -DKDE_INSTALL_QTPLUGINDIR=lib/qt6/plugins
 -DKDE_INSTALL_QMLDIR=lib/qt6/qml
 -DECM_MKSPECS_INSTALL_DIR=/usr/lib/qt6/mkspecs/modules"
hostmakedepends="extra-cmake-modules python3 qt5-qmake qt5-host-tools
 kcoreaddons gettext"
makedepends="qt5-devel grantlee5-devel kcodecs-devel kconfig-devel kconfigwidgets-devel
 kemoticons-devel kiconthemes-devel kio-devel syntax-highlighting-devel
 qt5-speech-devel"
short_desc="Textedit with PIM-specific features"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/pim/kpimtextedit"
distfiles="${KDE_SITE}/release-service/${version}/src/${pkgname%5}-${version}.tar.xz"
checksum=4edc962b0c8202c192b3c9c6faaba0996e88df99609500abb54f55b768e727c7

if [ "$CROSS_BUILD" ]; then
	hostmakedepends+=" qt5-tools-devel"
fi

do_check() {
	cd build
	ctest -E 'kpimtextedit-(grantleebuilder-texthtmlbuilder|composerng-richtextcomposer)test'
}

post_install() {
	rm -r "${DESTDIR}"/usr/share/locale # Conflicts with Qt6 version
}

kpimtextedit5-devel_package() {
	short_desc+=" - development files"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/qt5/mkspecs
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
